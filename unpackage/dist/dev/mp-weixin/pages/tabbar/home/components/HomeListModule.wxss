
.module-box {
  width: 98%;
  margin-left: 1%;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 20rpx 8rpx rgba(0, 0, 0, .1);
  margin-bottom:70rpx;
}
.module-box .module-top {
  width: 100%;
  height: 365rpx;
  text-align: center;
  overflow:hidden;
  background: #e1e1e1;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}
.module-top image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}
.module-box .decoration-logo {
  width: 100%;
  height: 112rpx;
}
.decoration-logo image {
  height: 100%;
  width: 100%;
}
.module-box .things-list {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap:wrap;
          flex-wrap:wrap;
  margin: 40rpx 0;
}
.things-list .list-clonum {
  width: 290rpx;
  height: 505rpx;
  margin-left: 42rpx;
  margin-bottom: 12rpx;
}
.list-clonum .clonum-img {
  width: 290rpx;
  height: 395rpx;
  border-radius: 20rpx;
}
.clonum-img image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.clonum-img .start-todo-home {
  width:152rpx;
  height:42rpx;
  background:#434343;
  font-size:20rpx;
  color:#fff;
  text-align:center;
  line-height:40rpx;
  border-radius:43rpx;
  position:absolute;
  margin-left:68rpx;
  margin-top:-100rpx;
}
.list-clonum .thing-info {
  width: 100%;
  height: 110rpx;
  text-align: center;
}
.thing-info .thing-name {
  margin-top: 18rpx;
  color: #000;
  font-size:25rpx;
}
.thing-info .thing-price {
  margin-top: 10rpx;
  font-weight: bold;
  font-size: 25rpx;
}

